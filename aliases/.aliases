# extract - archive extractor 
# usage: ex <file>
#{{{
function ex ()
{
  if [ -f $1 ] ; then
    case $1 in
      *.tar)        tar -xf $1                  ;;
      *.tar.xz)     tar -xJf $1                 ;;
      *.txz)        tar -xJf $1                     ;;
      *.tar.bz2)    tar -xjf $1                 ;;
      *.tbz2)       tar -xjf $1                 ;;
      *.tar.gz)     tar -xzf $1                 ;;
      *.tgz)        tar -xzf $1                 ;;
      *.tar.pixz)   tar -Ipixz -xf $1               ;;
      *.tpxz)       tar -Ipixz -xf $1               ;;
      *.xz)     xz -d $1                    ;;
      *.pixz)       pixz -d $1                  ;;
      *.gz)     gunzip $1                   ;;
      *.bz2)        bunzip2 $1                  ;;
      *.rar)        unrar x $1                  ;;
      *.zip)        unzip $1 -d $( echo  $1 | sed 's/.zip//' )  ;;
      *.Z)      uncompress $1               ;;
      *.7z)     7z x $1                 ;;
      *)        echo "'$1' cannot be extracted via ex"  ;;
    esac
  else
    echo "'$1' is not a valid file"
  fi
}
