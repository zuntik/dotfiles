# make files temporarily disappear
# usage - pushf <file>
#         popf 
# {{{
function pushf()
{
    mkdir -p ~/.push
    mv $1 ~/.push
}

function popf()
{
    if [ $(ls -1 ~/.push |wc -l ) -eq 1 ]; then
        mv  ~/.push/* .
        rmdir ~/.push
    fi
}
# }}}

