# Default programs
export EDITOR="nvim-qt --nofork"

export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CACHE_HOME="$HOME/.cache"
export ZDOTDIR="${XDG_CONFIG_HOME:-$HOME/.config}/zsh"
export ADOTDIR="${XDG_CONFIG_HOME:-$HOME/.config}/antigen"
export ANTIGEN_CACHE="${XDG_CACHE:-$HOME/.cache}/antigen"
export ZPLUG_HOME="${XDG_CONFIG_HOME:-$HOME/.config}/zplug"
export DOCKER_CONFIG="${XDG_CONFIG_HOME:-$HOME/.config}/docker"
export MACHINE_STORAGE_PATH="${XDG_DATA_HOME:-$HOME/.local/share}/docker-machine"
export IPYTHONDIR="${XDG_CONFIG_HOME:-$HOME/.config}/jupyter"
export JUPYTER_CONFIG_DIR="${XDG_CONFIG_HOME:-$HOME/.config}/jupyter"
export LESSHISTFILE=-
export GNUPGHOME="${XDG_DATA_HOME:-$HOME/.local/share}/gnupg"
export PASSWORD_STORE_DIR="${XDG_DATA_HOME:-$HOME/.local/share}/pass"
export SSB_HOME="${XDG_DATA_HOME:-$HOME/.local/share}/zoom"
export KDEHOME="${XDG_CONFIG_HOME:-$HOME/.config}/kde"
#export GTK2_RC_FILES="${XDG_CONFIG_HOME:-$HOME/.config}/gtk-2.0/gtkrc"
export WGETRC="${XDG_CONFIG_HOME:-$HOME/.config}/wgetrc"
export VSCODE_PORTABLE="${XDG_DATA_HOME:-$HOME/.local/share}/vscode-oss"
export MYSQL_HISTFILE="${XDG_DATA_HOME:-$HOME/.local/share}/mysql_history"
export NPM_CONFIG_USERCONFIG="${XDG_CONFIG_HOME:-$HOME/.config}/npm/npmrc"
export NVM_DIR="${XDG_DATA_HOME:-$HOME/.local/share}/nvm"
export OCTAVE_HISTFILE="${XDG_CACHE:-$HOME/.cache}/octave_hist"
export OCTAVE_SITE_INITFILE="${XDG_CONFIG_HOME:-$HOME/.config}/octave/octaverc"
export MPLAYER_HOME="${XDG_CONFIG_HOME:-$HOME/.config}/mplayer"
export TEXMFHOME="${XDG_DATA_HOME:-$HOME/.local/share}texmf"
export TEXMFVAR="${XDG_CACHE:-$HOME/.cache}/texlive/texmf-var"
export TEXMFCONFIG="${XDG_CONFIG_HOME:-$HOME/.config}texlive/texmf-config"
export CARGO_HOME="${XDG_DATA_HOME:-$HOME/.local/share}/cargo"
export PYLINTHOME="${XDG_CACHE:-$HOME/.cache}/pylint"
export GOPATH="${XDG_DATA_HOME:-$HOME/.cache}/go"
export SSH_AUTH_SOCK="$XDG_RUNTIME_DIR/ssh-agent.socket"

# use vimpager when available for manpages
[ -f /usr/bin/vimpager ] && export MANPAGER=vimpager

export LC_ALL="en_US.UTF-8"
export LANGUAGE="en_US.UTF-8"
export LC_CTYPE="en_US.UTF-8"

