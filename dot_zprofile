# Default programs
export EDITOR="nvim"

# ~/ Clean-up:
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_CACHE_HOME="$HOME/.cache"
export ZDOTDIR="${XDG_CONFIG_HOME:-$HOME/.config}/zsh"
export ADOTDIR="${XDG_CONFIG_HOME:-$HOME/.config}/antigen"
export ANTIGEN_CACHE="${XDG_CACHE:-$HOME/.cache}/antigen"
export DOCKER_CONFIG="${XDG_CONFIG_HOME:-$HOME/.config}/docker"
export MACHINE_STORAGE_PATH="${XDG_DATA_HOME:-$HOME/.local/share}/docker-machine"
export IPYTHONDIR="${XDG_CONFIG_HOME:-$HOME/.config}/jupyter"
export JUPYTER_CONFIG_DIR="${XDG_CONFIG_HOME:-$HOME/.config}/jupyter"
export LESSHISTFILE=-
export GNUPGHOME="${XDG_DATA_HOME:-$HOME/.local/share}/gnupg"
export PASSWORD_STORE_DIR="${XDG_DATA_HOME:-$HOME/.local/share}/pass"
export SSB_HOME="${XDG_DATA_HOME:-$HOME/.local/share}/zoom"
export KDEHOME="${XDG_CONFIG_HOME:-$HOME/.config}/kde"
export GTK2_RC_FILES="${XDG_CONFIG_HOME:-$HOME/.config}/gtk-2.0/gtkrc"
export WGETRC="${XDG_CONFIG_HOME:-$HOME/.config}/wgetrc"

# other stuff
export MPD_HOST=~/.local/share/mpd/socket
export PASSWORD_STORE_GENERATED_LENGTH=14


# use vimpager when available for manpages
[ -f /usr/bin/vimpager ] && export MANPAGER=vimpager
