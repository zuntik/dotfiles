[user]
	email = {{ .email }}
	name = {{ .name }}
[include]
    path = user
[core]
    editor = nvim
    excludesfile = ~/.config/git/gitignore
    hooksPath = ~/.config/git/hooks/
[color]
    diff = true
    ui = true
    branch = true
    status = true
    decorate = true
    showbranch = true
    pager = true
    grep = true
    interactive = true
[credential]
    helper = cache --timeout=3600
[push]
    default = simple
[advice]
    statusHints = false
    commitBeforeMerge = false
    detachedHead = false
    implicitIdentity = false
    pushNonFastForward = false
    resolveConflict = false
    pushUpdateRejected = false
    rmHints = false
    amWorkDir = false
    statusUoption = false
    pushNeedsForce = false
    pushFetchFirst = false
    pushAlreadyExists = false
    pushNonFFCurrent = false
[alias]
    fancylog = log --oneline --decorate --graph --all
    sstatus = status --short
    unstage = reset HEAD --
    visual = !gitk --all
    copystage = checkout-index -f
    branchcommit = checkout -b
    lsalias = config --get-regexp alias
    detailremote = remote show
    submodulesud = submodule foreach git pull origin master
[pull]
	rebase = false
[init]
    defaultBranch = main
[core]
    pager = delta
[delta]
    plus-style = "syntax #012800"
    minus-style = "syntax #340001"
    syntax-theme = Monokai Extended
    navigate = true
[interactive]
    diffFilter = delta --color-only
