    source /opt/anaconda/bin/activate ;
}

# cleaning aliases
clean-latex() {
    touch .dummy .dummy2;
    ls $( ls -1 | grep '.aux\|.out\|.log') .dummy .dummy2;
    \rm -I $( ls | grep '.aux\|.out\|.log') .dummy .dummy2 ;
}

