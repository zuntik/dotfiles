source_ros () {
  if [ -n "$ZSH_VERSION" ]; then
    source /opt/ros/noetic/setup.zsh 
  elif [ -n "$BASH_VERSION" ]; then 
    source /opt/ros/noetic/setup.bash
  else
    source /opt/ros/noetic/setup.sh
  fi
}

expand_cur_dir () { echo $( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd ) ;}

